<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.panding.main.LoginActivity">

    <LinearLayout

        android:background="@drawable/loginbg"
        android:orientation="horizontal"
        android:layout_weight="2371"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_weight="1453"
            android:layout_width="0dp"
            android:layout_height="match_parent"></LinearLayout>

        <ImageView
            android:layout_weight="970"
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:src="@drawable/pdlion" />

        <LinearLayout
            android:layout_weight="1453"
            android:layout_width="0dp"
            android:layout_height="match_parent"></LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4219">

        <FrameLayout
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_et_bg"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:textSize="14sp"
            app:met_iconLeft="@drawable/username"
            app:met_hideUnderline="true"
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="手机号码 设备号"
            app:met_baseColor="@color/colorAccent"
            app:met_clearButton="true"
            app:met_iconPadding="0dp"
            app:met_textColorHint="@color/colorAccent"
            app:met_primaryColor="@color/colorPrimary" />

        </FrameLayout>

        <FrameLayout
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_et_bg"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.rengwuxian.materialedittext.MaterialEditText
                app:met_hideUnderline="true"
                app:met_iconLeft="@drawable/password"
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="密码"
                app:met_baseColor="@color/colorAccent"
                app:met_clearButton="true"
                app:met_iconPadding="0dp"
                android:textSize="14sp"
                app:met_textColorHint="@color/colorAccent"
                app:met_primaryColor="@color/colorPrimary" />

        </FrameLayout>



        <TextView
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="64dp"
            android:layout_gravity="right"
            android:text="忘记密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/login"
            android:text="登录"
            android:layout_marginTop="48dp"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="12sp"
            android:layout_marginTop="16dp"
            android:text="新注册用户"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
