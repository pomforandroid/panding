<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="48dp">
    <LinearLayout
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="24dp"
        android:gravity="center_vertical"
        style="@style/secondstyle"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="48dp">

        <TextView
            android:textSize="16sp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="验证码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:background="@color/divisionline"
            android:layout_width="1dp"
            android:layout_height="match_parent"></View>

        <EditText android:textSize="14sp"
            android:id="@+id/et_code"
            android:hint="请输入手机验证码"
            android:background="@drawable/et_tran_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <Button
        android:layout_marginRight="8dp"
        android:layout_gravity="right|center_vertical"
        android:id="@+id/bt_resendcode"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/third_bg_noraml"
        android:text="重发验证码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </FrameLayout>
    <Button
        android:id="@+id/bt_step2"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_gravity="bottom"
        style="@style/firststyle"
        android:text="下一步"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</FrameLayout>


