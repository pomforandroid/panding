<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.panding.main.pdservice.fragment.ServiceCommentFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3027">
            <android.support.v7.widget.Toolbar
                app:navigationIcon="@drawable/ic_navigate_before_black"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                >
                <TextView
                    style="@style/firststyle"
                    android:id="@+id/save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="16dp"
                    />
            </android.support.v7.widget.Toolbar>

            <LinearLayout
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@color/itembg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/service_record"
                    android:layout_marginLeft="36dp"
                    android:text="5000KM置换汽车机油1次"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="24dp"
                    android:text="总体"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioGroup

                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:drawablePadding="4dp"
                        android:drawableLeft="@drawable/rbt_bg"
                        android:textColor="@drawable/rbt_text"
                        android:button="@null"
                        android:text="好评"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:drawablePadding="4dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:drawableLeft="@drawable/rbt_bg"
                        android:textColor="@drawable/rbt_text"
                        android:button="@null"
                        android:text="中评"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:drawablePadding="4dp"
                        android:drawableLeft="@drawable/rbt_bg"
                        android:textColor="@drawable/rbt_text"
                        android:button="@null"
                        android:text="差评"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:background="@color/itembg"
                android:layout_width="match_parent"
                android:layout_height="8dp"></LinearLayout>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_marginLeft="24dp"
                android:textSize="12sp"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:hint="亲，服务满意吗？说说你对本次维修保养的优点或不足吧"
                app:met_hideUnderline="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:met_baseColor="@color/colorAccent"
                app:met_clearButton="true"
                app:met_textColorHint="@color/colorAccent"
                app:met_primaryColor="@color/colorPrimary" />

        </LinearLayout>


        <!--  <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <LinearLayout
                  android:layout_marginLeft="24dp"
                  android:orientation="vertical"
                  android:padding="8dp"
                  android:gravity="center"
                  android:background="@drawable/dashed_bg"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">
              <ImageView
                  android:src="@drawable/uploadpic"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />

                  <TextView
                      android:text="上传照片"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />

              </LinearLayout>


          </LinearLayout>-->
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/shape_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3581">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="24dp"
                    android:text="匿名"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="right|center_vertical"
                    android:text="你写的评价以匿名的方式展现"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </FrameLayout>

            <LinearLayout
                android:background="@color/itembg"
                android:layout_width="match_parent"
                android:layout_height="8dp"></LinearLayout>
            <TextView
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="24dp"
                android:text="各项评分"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginLeft="24dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="服务态度"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.willy.ratingbar.ScaleRatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:drawableEmpty="@drawable/lion_head_dark"
                        app:drawableFilled="@drawable/pdlionhead"
                        app:starPadding="8">

                    </com.willy.ratingbar.ScaleRatingBar>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginLeft="24dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="服务效率"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.willy.ratingbar.ScaleRatingBar
                        android:layout_gravity="center"
                        app:starPadding="8"
                        app:drawableEmpty="@drawable/lion_head_dark"
                        app:drawableFilled="@drawable/pdlionhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </com.willy.ratingbar.ScaleRatingBar>
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginLeft="24dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="服务质量"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.willy.ratingbar.ScaleRatingBar
                        android:layout_gravity="center"
                        app:starPadding="8"
                        app:drawableEmpty="@drawable/lion_head_dark"
                        app:drawableFilled="@drawable/pdlionhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </com.willy.ratingbar.ScaleRatingBar>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
